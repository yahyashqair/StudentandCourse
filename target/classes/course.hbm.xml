<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name = "hiber.test1.hiber.Course" table = "COURSE">
        <meta attribute = "class-description">
            This class contains the Courses detail.
        </meta>
        <id name = "cid" type = "int" column = "cid">
            <generator class="identity"/>
        </id>
        <property name = "name" column = "name" type = "string"/>
        <set name="studentSet" table="COURSE_STUDENT_REL" inverse="true" cascade="save-update">
            <key column="cid"/>
            <many-to-many column="sid" class="hiber.test1.hiber.Student" />
        </set>
    </class>
</hibernate-mapping>
